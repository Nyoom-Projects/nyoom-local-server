{
    "name": "nyoom-local-server",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "tsc": "tsc",
        "build": "npm run tsc && npm run lint && npm run test",
        "serve": "node dist/server.js",
        "serve-watch": "nodemon --watch dist dist/server.js",
        "lint": "tslint '**/*.ts'",
        "lint-fix": "tslint --fix '**/*.ts'",
        "test": "mocha \"./{,!(node_modules)/**/}*.test.js\"",
        "test-watch": "mocha \"./{,!(node_modules)/**/}*.test.js\" -w"
    },
    "main": "server.js",
    "dependencies": {
        "body-parser": "^1.18.3",
        "cors": "^2.8.4",
        "dateformat": "^3.0.3",
        "deepstream.io-client-js": "^2.3.0",
        "elasticsearch": "^15.3.0",
        "express": "^4.16.2",
        "flatmap": "0.0.3",
        "mongoose": "^5.1.5",
        "unirest": "^0.5.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.4",
        "@types/dateformat": "^3.0.0",
        "@types/elasticsearch": "^5.0.30",
        "@types/express": "^4.16.0",
        "@types/express-fileupload": "^0.4.0",
        "@types/mocha": "^5.2.5",
        "@types/mock-require": "^2.0.0",
        "@types/mongoose": "^5.3.7",
        "@types/node": "^10.12.18",
        "@types/supertest": "^2.0.7",
        "mocha": "^5.2.0",
        "mock-require": "^3.0.2",
        "nodemon": "^1.12.1",
        "supertest": "^3.3.0",
        "tslint": "^5.12.0",
        "typescript": "^3.2.2"
    }
}
